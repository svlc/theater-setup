loop=0 # repeat playlist forever
xy=600 # set window width to 600 pixels
# vf-add=expand=-40:0:-1:-1 # apply an expand filter

softvol=yes # force the use of software mixer (required for "softvol-max")
softvol-max=300 # set maximum allowed volume level
volstep=10 # set 10% step size for volume
volume=15 # set startup volume, can be dangerous when combined with a high "softvol-max"

noautosub=yes # disable automatic subtitle file loading
subcp=utf-8 # set subtitle codepage
ass=yes # enable SSA/ASS subtitle rendering
ass-color=FFEF0000 # set yellow subtitle color
ass-border-color=00000020 # set black outline border color for subtitles
subfont-text-scale=6.5 # set size for subtitles

framedrop=1 # enable frame dropping (good for slower machines)
cache=8192 # set higher precaching value
